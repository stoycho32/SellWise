 <div style="position: fixed;">
    <partial name="_PanelPartial" />
</div>
<br />
<div style="display: flex; flex-direction: column; align-items: center;">
    <div style="display: flex; width: 1000px; justify-content: space-between; align-items: center; margin-top: 20px;">
        <h1 style="color: #757575;">Today's Sales</h1>
    </div>
    <br />
    <div style="display: flex; width: 1000px; justify-content: space-between; align-items: center;">
        <form asp-action="ParkingOccupations" method="GET" style="display: flex; flex-direction: row;">
            <input type="text" id="productName" name="productName" class="form-control" style="background-color: #DAF5FA; color: #757575; width: 200px; height: 40px; margin-right: 10px" placeholder="Product Name">
            <button class="btn btn-success p-3 fw-bold" style="color: #DBF6FF; background-color: #1D7FCC; border: 0px; width: 120px; height: 40px; text-align: center; line-height: 5px;" type="submit">Filter</button>
        </form>
    </div>
    <br />
    <div class="card-body d-flex justify-content-between align-items-center" style="width: 1000px; border: 1px solid #2295F0; border-radius: 5px;">
        <h5 class="card-title" style="color: #757575; margin: 0;">15/05/2024 - 13:54</h5>
        <h5 class="card-title" style="color: #757575; margin: 0;">Total Amount: 124.58 EUR Total Products Number: 5</h5>
        <a class="btn btn-success p-3 fw-bold" style="color: #DBF6FF; background-color: #1D7FCC; border: 0px; width: 120px; height: 40px; text-align: center; line-height: 5px;">Details</a>
    </div>
</div>

@* style="display: flex; *@