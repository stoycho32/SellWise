@model IEnumerable<SaleViewModel>

<div style="position: fixed;">
    <partial name="_PanelPartial" />
</div>
<br />
<div style="display: flex; flex-direction: column; align-items: center;">
    <div style="display: flex; width: 1000px; justify-content: space-between; align-items: center; margin-top: 20px;">
        <h1 style="color: #757575;">Today's Sales</h1>
    </div>
    <br />
    @{
        if (Model.Count() > 0)
        {
            @foreach (var sale in @Model)
            {
                <div class="card-body d-flex justify-content-between align-items-center" style="width: 1000px; border: 1px solid #2295F0; border-radius: 5px;">
                    <h5 class="card-title" style="color: #757575; margin: 0;">@sale.SaleStartDateTime</h5>
                    <h5 class="card-title" style="color: #757575; margin: 0;">@sale.TotalPrice Lv.</h5>
                    @if (sale.FinalizationDateTime != null)
                    {
                        <a asp-area="" asp-controller="Sell" asp-action="ContinueSale" asp-route-id="@sale.Id" class="btn btn-success p-3 fw-bold" style="color: #DBF6FF; background-color: #1D7FCC; border: 0px; width: 120px; height: 40px; text-align: center; line-height: 5px;">Continue Sale</a>
                    }
                    else
                    {
                        <a asp-area="" asp-controller="Sell" asp-action="SaleDetails" asp-route-id="@sale.Id" class="btn btn-success p-3 fw-bold" style="color: #DBF6FF; background-color: #1D7FCC; border: 0px; width: 120px; height: 40px; text-align: center; line-height: 5px;">Sale Details</a>
                    }
                </div>
            }
        }
        else
        {
            <div class="card-body d-flex justify-content-between align-items-center" style="width: 1000px; border: 1px solid #2295F0; border-radius: 5px;">
                <h5 class="card-title" style="color: #757575; margin: 0;">You do not have any sales</h5>
            </div>
        }
    }
</div>



