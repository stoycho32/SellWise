@using Microsoft.AspNetCore.Identity
@inject SignInManager<Cashier> SignInManager
@inject UserManager<Cashier> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-success p-3 fw-bold rounded-pill" style="color: #FF9F9F; background-color: #1D7FCC; border: 0px; width: 120px; height: 40px; text-align: center; line-height: 0px;">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="margin-right: 5px">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success p-3 fw-bold rounded-pill" style="color: #DBF6FF; background-color: #1D7FCC; border: 0px; width: 120px; height: 40px; text-align: center; line-height: 5px;">Register</a>
        </li>
        <li class="nav-item" style="margin-right: 5px">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success p-3 fw-bold rounded-pill" style="color: #DBF6FF; background-color: #1D7FCC; border: 0px; width: 120px; height: 40px; text-align: center; line-height: 5px;">Login</a>
        </li>
    }
</ul>
