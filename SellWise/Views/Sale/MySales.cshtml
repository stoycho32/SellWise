@model IEnumerable<SaleViewModel>

<partial name="_PanelPartial" />

@if (Model.Count() > 0)
{
    @foreach (var sale in Model)
    {
        <div style="display: flex; justify-content: center; margin-top: 50px;">
            <div class="card" style="width: 1000px; background-color: #DBF6FF; border: none; border-radius: 20px 20px 0 0; box-shadow: none;">
                <h5 class="card-header" style="background-color: #2295F0; color: #DBF6FF; border: none; border-radius: 20px 20px 0 0;">@sale.SaleStartDateTime</h5>
                <div class="card-body d-flex align-items-center justify-content-between" style="border: none; background-color: #55C0F0; border-radius: 0 0 20px 20px;">
                    <div>
                        @if (sale.IsFinalized == true)
                        {
                            <h5 class="card-title" style="color: #DBF6FF">The sale is finished</h5>
                        }
                        else
                        {
                            <h5 class="card-title" style="color: #DBF6FF">The sale is currently occurring</h5>
                        }
                        <p class="card-text" style="color: #DBF6FF">Total Sale Price: @sale.TotalPrice</p>
                    </div>
                    @if (sale.IsFinalized == true)
                    {
                        <a asp-controller="AnotherController" asp-action="AnotherAction" class="btn btn-success p-3 fw-bold rounded-pill" style="width: 130px; background-color: #1D7FCC; border: none; box-shadow: none">Details</a>
                    }
                    else
                    {
                        <a asp-controller="Sale" asp-action="UseSpot" class="btn btn-success p-3 fw-bold rounded-pill" style="width: 130px; background-color: #1D7FCC; border: none; box-shadow: none">Continue</a>
                    }
                </div>
            </div>
        </div>
    }
}
else
{
    <p>There are no sales available</p>
}