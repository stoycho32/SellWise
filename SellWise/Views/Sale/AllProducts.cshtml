@model IEnumerable<ProductViewModel>

    <h1>All Products</h1>
@if (Model.Count() > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Product Price</th>
                <th scope="col">Product Quantity</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductSellingPrice</td>
                    <td>@product.ProductQuantity</td>
                    <td><a asp-controller="Sale" asp-action="AddProduct" asp-route-saleId="@Sale.Id" class="btn btn-success p-3 fw-bold rounded-pill me-2" style="width: 130px; background-color: #1D7FCC; border: none; box-shadow: none">Select</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>No Products Available.</h1>
}